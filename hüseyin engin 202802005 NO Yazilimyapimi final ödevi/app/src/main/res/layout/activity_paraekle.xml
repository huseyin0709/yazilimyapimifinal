<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kullanici_girii"
    tools:context=".paraekle">

    <EditText
        android:id="@+id/paraekle_edittext"
        android:layout_width="261dp"
        android:layout_height="71dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/beyazedit"
        android:ems="10"
        android:hint="Fiyat Giriniz"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/paraekle_buton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paralar_spinner" />

    <Button
        android:id="@+id/paraekle_buton"
        android:layout_width="148dp"
        android:layout_height="68dp"
        android:layout_marginBottom="109dp"
        android:background="@drawable/buton"
        android:onClick="paraeklebutonu"
        android:text="EKLE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paraekle_edittext" />

    <Spinner
        android:id="@+id/paralar_spinner"
        android:layout_width="365dp"
        android:layout_height="73dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/beyazedit"
        app:layout_constraintBottom_toTopOf="@+id/paraekle_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>