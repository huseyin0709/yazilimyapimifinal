<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kullanici_girii"
    tools:context=".urunekle">

    <Spinner
        android:id="@+id/spinner_urunler"
        android:layout_width="351dp"
        android:layout_height="65dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/beyazedit"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/miktar_kg"
        android:layout_width="209dp"
        android:layout_height="72dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/beyazedit"
        android:ems="10"
        android:hint="Miktar"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/kgfiyati_edittext"
        android:layout_width="209dp"
        android:layout_height="69dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/beyazedit"
        android:ems="10"
        android:hint="Kg FiyatÄ±"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/urunekle_buton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <Button
        android:id="@+id/urunekle_buton"
        android:layout_width="157dp"
        android:layout_height="66dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/buton"
        android:onClick="uruneklebutonu"
        android:text="EKLE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kgfiyati_edittext" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="164dp"
        android:layout_height="49dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/miktar_kg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_urunler"
        app:srcCompat="@drawable/mktari_gr" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_urunler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_r_n_se_" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/kgfiyati_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miktar_kg"
        app:srcCompat="@drawable/kg_fiyat" />
</androidx.constraintlayout.widget.ConstraintLayout>